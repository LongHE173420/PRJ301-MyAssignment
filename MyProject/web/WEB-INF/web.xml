<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>controller.author.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimetableController</servlet-name>
        <servlet-class>controller.lecturer.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttTakeController</servlet-name>
        <servlet-class>controller.lecturer.AttTakeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchLecturer</servlet-name>
        <servlet-class>controller.author.SearchLecturerBycode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchStudentByCode</servlet-name>
        <servlet-class>controller.author.SearchStudentByCode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GradeTableController</servlet-name>
        <servlet-class>controlller.student.GradeTableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimetableController</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttTakeController</servlet-name>
        <url-pattern>/lecturer/att</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchLecturer</servlet-name>
        <url-pattern>/searchLecturer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchStudentByCode</servlet-name>
        <url-pattern>/searchStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradeTableController</servlet-name>
        <url-pattern>/student/grade</url-pattern>
    </servlet-mapping>
</web-app>
